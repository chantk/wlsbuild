echo "+==============================================================+"
echo "+ Add entries to /etc/openrc/runlevels/* according to my       +"
echo "+ try-n-error. Please review it after install.                 +"
echo "+==============================================================+"

(
  cd $PKG/etc/openrc/runlevels/sysinit;
  for i in devfs device-mapper hwclock isapnp procfs sysfs tmpfiles.dev udev udev-mount; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  cd $PKG/etc/openrc/runlevels/boot;
  for i in acpid alsa binfmt bootmisc consolefont cpufreq dmesg fsck fuse hostname keymaps klogd ldconfig localmount loopback modules motd mtab network numlock root staticroute swap swapfiles syslogd sysctl termencoding tmpfiles.setup urandom; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  cd $PKG/etc/openrc/runlevels/default;
  for i in atd consolekit cron cupsd dbus fontcache glibschemas gtkmodules iconcache inetd local mimedatabase netmount portmap rpc.statd sshd; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  cd $PKG/etc/openrc/runlevels/shutdown;
  for i in swclock; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  mkdir -p $PKG/etc/openrc/runlevels/desktop;
  cd $PKG/etc/openrc/runlevels/desktop;
  ln -s ../default default;
)

