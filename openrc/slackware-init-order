echo "+==============================================================+"
echo "+ Add entries to /etc/openrc/runlevels/* according to my       +"
echo "+ try-n-error. Please review it after install.                 +"
echo "+==============================================================+"

(
  cd $PKG/etc/openrc/runlevels/sysinit;
  for i in binfmt devfs device-mapper fuse isapnp loop modules procfs serial sysctl sysfs tmpfiles.dev udev udev-mount; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  cd $PKG/etc/openrc/runlevels/boot;
  for i in alsa bootmisc consolefont cpufreq dmesg fontcache fsck glibschemas gtkmodules hostname hwclock iconcache keymaps klogd ldconfig localmount loopback mimedatabase motd mtab numlock root swap swapfiles syslogd termencoding tmpfiles.setup urandom; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  cd $PKG/etc/openrc/runlevels/default;
  for i in acpid atd consolekit cron cupsd dbus  inetd local netmount portmap rpc.statd sshd; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
)

(
  mkdir -p $PKG/etc/openrc/runlevels/desktop;
  cd $PKG/etc/openrc/runlevels/desktop;
  ln -s ../default default;
)

