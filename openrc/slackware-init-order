echo "+==============================================================+"
echo "+ Add entries to /etc/openrc/runlevels/* according to my       +"
echo "+ try-n-error. Please review it after install.                 +"
echo "+==============================================================+"

(
  echo -n "Setting up runlevels sysinit: "
  cd $PKG/etc/openrc/runlevels/sysinit;
  for i in devfs device-mapper dmesg fsck fuse hwclock isapnp loop modules mtab root sysctl sysfs udev udev-settle udev-trigger; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
  echo "Done"
)

(
  echo -n "Setting up runlevels boot: "
  cd $PKG/etc/openrc/runlevels/boot;
  for i in binfmt bootmisc cpufreq hostname keymaps ldconfig localmount loopback motd numlock procfs serial swap swapfiles termencoding urandom; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
  echo "Done"
)

(
  echo -n "Setting up runlevels default: "
  cd $PKG/etc/openrc/runlevels/default;
  for i in acpid atd consolefont consolekit cupsd dbus dcron fontcache glibschemas gtkmodules iconcache inetd klogd local mimedatabase network netmount rpcbind rpc.statd sshd syslogd; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  unset i
  echo "Done"
)

(
  echo -n "Setting up runlevels desktop: "
  mkdir -p $PKG/etc/openrc/runlevels/desktop;
  cd $PKG/etc/openrc/runlevels/desktop;
  ln -s ../default default;
  for i in xdm; do
    rm -f $i; ln -sf /etc/openrc/init.d/$i $i;
  done
  echo "Done"
)

