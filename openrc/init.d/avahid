command=/usr/sbin/avahi-daemon
command_args="$avahid_args -D"
pidfile=/var/run/avahi-daemon/pid
name="Avahi Service Advertisement Daemon"

depend()
{
	use dns
	need localmount dbus
	after bootmisc
}
